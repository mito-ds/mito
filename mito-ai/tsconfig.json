{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ES2018",
      "ES2020.BigInt",
      "ES2020.Intl",
      "ES2020.String",
      "ES2022.Error",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "style/**/*.css",
    "declarations.d.ts"
  ]
}